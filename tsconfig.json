{
  "compilerOptions": {

    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    // "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,

       "target": "ES2022",
    "module": "commonjs",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}

